<div class='container-fluid'>
  <div class='row pt-3 pb-3'>
    <div class='col-sm-8 text-center'>Please enter your <b>username</b> and <b>password</b> to log in:</div>
  </div>
  <%= form_with url: "/login", method: :post, local: true do |f| %>
    <div class='form-group'>
      <%= f.label :email, class: 'col-sm-4 control-label' %>
      <div class='col-sm-6'>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password, class: 'col-sm-4 control-label' %>
      <div class='col-sm-6'>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit "Log In" %>
  <% end %>
</div>
