<h3><%= @user.name %>'s Dashboard</h3>

<%= button_to 'Discover Movies', "/users/#{@user.id}/discover", method: :get %>

<hr>

<div id='viewing-parties'>
<h3>Viewing Parties</h3>
<% if @party_details %>
  <div class="container">
    <div class="row">
      <% @party_details.each do |party| %>

        <div class="col-3" id='party-<%= party[0].id %>'>


          <img src='https://image.tmdb.org/t/p/original/<%= party[1].poster_path %>'
          class="img-thumbnail" alt='Poster for <%= party[1].title %>'><br>
          <%= link_to party[1].title, "/users/#{@user.id}/movies/#{party[0].movie_id}" %><br>
          <%= party[0].date.strftime('%B %d, %Y') %><br>
          <%= party[0].start_time.strftime('%l:%M %p') %><br>
          <% if party[0].host_id == @user.id %>
            Hosting
          <% else %>
            Invited
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
No viewing parties yet. Host a party to get started!
<% end %>
</div>
