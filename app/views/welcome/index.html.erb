<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-6 text-center p-5 bg-login'>
      Existing Users:
      <%= button_to 'Log In', '/login', method: :get %>
    </div>

    <div class='col-md-6 text-center p-5 bg-login'>
      New to Viewing Party?
      <%= button_to 'Create an account', '/register', method: :get %>
    </div>
  </div>

  <div class='row text-justify p-5'>
    <% if current_user %>
      <h5>Existing users:</h5>
      <% User.all.each do |user| %>
        <div class='col-lg-4'>
          <%= user.email %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
